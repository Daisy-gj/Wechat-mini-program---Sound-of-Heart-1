
.moment {
  margin-top:20rpx;
}

.onemoment {
  background-color: rgb(222, 244, 248);
  width: 650rpx;
  margin-left: 50rpx;
  margin-top: 10rpx;
  height: 320rpx;
}
.myhead{
  width: 90rpx;
  height: 90rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  border-radius: 50%;
  float: left;
}

.onemoment image {
  float: left;
}

.onemoment .info {
  float: left;
}

.onemoment .name {
  margin-top:10rpx;
  margin-left: 20rpx;
  clear: right;
}

.onemoment .time {
  font-size: 0.8rem;
  color: rgb(161, 172, 173);
  margin-left: 20rpx;
  clear: right;
}

.onemoment .content {
  font-size: 0.8rem;
  color: rgb(95, 103, 104);
  clear: both;
  margin-left: 130rpx;

}

.onemoment .comment {
  font-size: 0.7rem;
  width:100%;
  height: 150rpx;
  margin-left: 0rpx;
  margin-top: 20rpx;
  background-color: rgb(235, 247, 243);
}
